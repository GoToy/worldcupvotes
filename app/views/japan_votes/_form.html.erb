<%= form_for(japan_vote) do |f| %>
  <% if japan_vote.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(japan_vote.errors.count, "error") %> 投票は一度しかできないのでエラーが発生しました。</h2>

      <ul>
      <% japan_vote.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %>
    <%= current_user.username %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="field">
    <%= f.label :tournament_id %>
    <%= f.collection_select :tournament_id, Tournament.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :ranking_id %>
    <%= f.collection_select :ranking_id, Ranking.all, :id, :name, :prompt => "--順位を選んでください--" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
